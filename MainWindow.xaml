<Window x:Class="CartoonMemento.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CartoonMemento"
        mc:Ignorable="d"
        Title="MainWindow" Height="839" Width="1474.85">
    <Grid Margin="0,0,28,-21">
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="1468" FontFamily="Noto Mono" FontSize="16" Margin="0,0,-47,0">
            <MenuItem Header="File" Height="23" Margin="0" Width="100">
                <MenuItem Header="New" Height="23" Width="100"/>
                <MenuItem Header="Open" Height="23" Width="100"/>
                <MenuItem Header="Save" Height="23" Width="100"/>
                <MenuItem Header="Save as" Height="23" Width="100" FontSize="15"/>
                <MenuItem Header="Exit" Height="23" Width="100"/>
            </MenuItem>
            <MenuItem Header="Edit" Height="23" Margin="0" Width="100">
                <MenuItem Header="Undo" Height="23" Width="100"/>
                <MenuItem Header="Redo" Height="23" Width="100"/>
                <MenuItem Header="Cut" Height="23" Width="100"/>
                <MenuItem Header="Delete" Height="23" Width="100"/>
                <MenuItem Header="Transform" Height="23" Width="100"/>
                <MenuItem Header="Edit Image" Height="23" Width="100"/>
                <MenuItem Header="Import Stickers" Height="23" Width="100"/>
            </MenuItem>
            <MenuItem Header="About" Height="23" Margin="0" Width="100">
                <MenuItem Header="About" Height="23" Width="100"/>
                <MenuItem Header="Help" Height="23" Width="100"/>
            </MenuItem>
        </Menu>
        <Button x:Name="buttonSave" Content="Save Image" HorizontalAlignment="Left" Margin="234,760,0,0" VerticalAlignment="Top" Width="90" Height="24"/>
        <Button x:Name="buttonLoad" Content="Load Image" HorizontalAlignment="Left" Margin="121,760,0,0" VerticalAlignment="Top" Width="90" Height="24" Click="buttonLoad_Click"/>
        <Button x:Name="buttonImport" Content="Import sticker" HorizontalAlignment="Left" Margin="10,760,0,0" VerticalAlignment="Top" Width="90" Height="24"/>
        <Grid HorizontalAlignment="Left" Height="705" Margin="10,33,0,0" VerticalAlignment="Top" Width="314">
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="294" SelectionOpacity="1" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Image x:Name="searchImage" Margin="271,14,10,655" Source="Search_16xMD.png" Stretch="Fill" RenderTransformOrigin="0.545,0.514"/>
            <StackPanel x:Name="stickers" HorizontalAlignment="Left" Height="625" Margin="10,70,0,0" VerticalAlignment="Top" Width="294"/>
        </Grid>
        <Grid x:Name="imageGrid" HorizontalAlignment="Left" Height="705" Margin="368,33,0,0" VerticalAlignment="Top" Width="1061">
            <Grid.RowDefinitions>
                <RowDefinition Height="14*"/>
                <RowDefinition Height="159*"/>
            </Grid.RowDefinitions>
            <Image x:Name="image" HorizontalAlignment="Left" Height="627" Margin="10,55,0,0" VerticalAlignment="Top" Width="1041" Grid.RowSpan="2"/>
            <TextBox x:Name="imageStatus" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap" Text="PICTURE INFO" VerticalAlignment="Top" Width="1041" FontSize="16"/>
        </Grid>
    </Grid>
</Window>
