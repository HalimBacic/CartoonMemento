<Canvas x:Name="stickerCanvas"
        x:Class="CartoonMemento.StickerImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CartoonMemento"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Image x:Name="myImage" Canvas.Top="10" Canvas.Left="10" Height="280" Width="280" Focusable="True">
    </Image>
    <Canvas x:Name="points" Visibility="Hidden">
    <Ellipse Height="10" Width="10" Fill="Black" Canvas.Left="-5" Canvas.Top="-5" MouseEnter="ResizeCursor"></Ellipse>
        <Ellipse Height="10" Width="10" Fill="Black" Canvas.Left="295" Canvas.Top="-5" MouseEnter="ResizeCursor"></Ellipse>
        <Ellipse Height="10" Width="10" Fill="Black" Canvas.Left="-5" Canvas.Top="295" MouseEnter="ResizeCursor"></Ellipse>
        <Ellipse Height="10" Width="10" Fill="Black" Canvas.Left="295" Canvas.Top="295" MouseEnter="ResizeCursor"></Ellipse>
    </Canvas>
</Canvas>
